generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

enum Role {
  CLIENT
  AGENT
  AGENCY
  ADMIN
}

enum PropertyType {
  APPARTEMENT
  VILLA
  STUDIO
  DUPLEX
  TERRAIN
  LOCAL_COMMERCIAL
  BUREAU
}

enum TransactionType {
  VENTE
  LOCATION
}

enum NegMargin {
  FERME
  PEU_NEGOCIABLE
  NEGOCIABLE
}

enum TenantType {
  COUPLES
  ETUDIANTS
  FAMILLES
  TOUS
}

enum PropertyStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  SOLD
  RENTED
}

enum LeadStatus {
  PROSPECT
  VISITE
  OFFRE
  NEGOCIE
  CONVERTI
  PERDU
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  phone         String?
  password      String
  image         String?
  role          Role      @default(CLIENT)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  agencyId      String?
  agency        Agency?   @relation(fields: [agencyId], references: [id])
  
  properties    Property[]
  favorites     Favorite[]
  searches      SavedSearch[]
  visits        Visit[]
  leads         Lead[]
  conversations Conversation[]
  messages      Message[]
  
  @@index([email])
  @@index([role])
}

model Agency {
  id          String   @id @default(cuid())
  name        String
  logo        String?
  phone       String
  email       String
  address     String
  city        String
  description String?
  verified    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  agents      User[]
  properties  Property[]
  
  @@index([verified])
}

model Property {
  id              String           @id @default(cuid())
  title           String
  titleAr         String?
  titleEn         String?
  description     String
  descriptionAr   String?
  descriptionEn   String?
  
  type            PropertyType
  transactionType TransactionType
  status          PropertyStatus   @default(DRAFT)
  
  price           Float
  negMargin       NegMargin        @default(FERME)
  margPercentage  Float            @default(0)
  
  address         String
  city            String
  governorate     String
  zipCode         String?
  latitude        Float
  longitude       Float
  
  surface         Float
  bedrooms        Int?
  bathrooms       Int?
  floor           Int?
  totalFloors     Int?
  yearBuilt       Int?
  
  tenantTypes     TenantType[]     @default([TOUS])
  
  features        String[]
  images          String[]
  videoUrl        String?
  virtualTour     String?
  
  views           Int              @default(0)
  verified        Boolean          @default(false)
  featured        Boolean          @default(false)
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  publishedAt     DateTime?
  
  ownerId         String
  owner           User             @relation(fields: [ownerId], references: [id])
  
  agencyId        String?
  agency          Agency?          @relation(fields: [agencyId], references: [id])
  
  favorites       Favorite[]
  visits          Visit[]
  leads           Lead[]
  
  @@index([type])
  @@index([transactionType])
  @@index([status])
  @@index([city])
  @@index([governorate])
  @@index([price])
  @@index([ownerId])
  @@index([agencyId])
}

model Favorite {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  @@unique([userId, propertyId])
  @@index([userId])
}

model SavedSearch {
  id              String          @id @default(cuid())
  name            String
  
  type            PropertyType?
  transactionType TransactionType?
  city            String?
  governorate     String?
  minPrice        Float?
  maxPrice        Float?
  minSurface      Float?
  maxSurface      Float?
  bedrooms        Int?
  
  notificationsEnabled Boolean     @default(true)
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model Visit {
  id          String   @id @default(cuid())
  scheduledAt DateTime
  status      String   @default("PENDING")
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id])
  
  @@index([userId])
  @@index([propertyId])
  @@index([scheduledAt])
}

model Lead {
  id         String     @id @default(cuid())
  status     LeadStatus @default(PROSPECT)
  
  name       String
  email      String
  phone      String
  message    String?
  budget     Float?
  
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  
  userId     String?
  user       User?      @relation(fields: [userId], references: [id])
  
  propertyId String
  property   Property   @relation(fields: [propertyId], references: [id])
  
  @@index([status])
  @@index([propertyId])
  @@index([userId])
}

model Conversation {
  id          String    @id @default(cuid())
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  participants User[]
  messages     Message[]
  
  @@index([updatedAt])
}

model Message {
  id             String       @id @default(cuid())
  content        String
  read           Boolean      @default(false)
  
  createdAt      DateTime     @default(now())
  
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  @@index([conversationId])
  @@index([senderId])
}
